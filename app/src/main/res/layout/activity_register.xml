<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/music"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ll"
        android:layout_marginBottom="50dp"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="#44FFFFFF">
        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"
            android:id="@+id/r_user"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/r_val"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入验证码(测试阶段:1234)"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="获取验证码"
                android:background="#00FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/r_val"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/r_psw1"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码" />
            <Button
                android:id="@+id/r_show1"
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:background="@drawable/psw_show"
                android:layout_alignRight="@+id/r_psw1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/r_psw2"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="确认密码" />
            <Button
                android:id="@+id/r_show2"
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:background="@drawable/psw_show"
                android:layout_alignRight="@+id/r_psw2"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:textSize="13sp"
                android:layout_below="@id/r_psw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorButton"
                android:text="长度限制为6-16字符，可以输入数字、字母"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="注册"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <CheckBox
        android:id="@+id/r_cb"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:textSize="13sp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorButton"
        android:text="我已阅读，并同意用户协议"/>
</RelativeLayout>